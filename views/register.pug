extends unregistered_layout

block content
	if Photoerror
		div(class="alert alert-danger") #{Photoerror}
	h1 REGISTER USER
	script 

	.f-container.p-4
		form(method='POST' action='/users/register' enctype="multipart/form-data")
			#form-group
				label Name*:
				input.form-control( type="text" name="name"
					pattern="^[A-Za-z][A-Za-z0-9]*$"
					required)
			#form-group
				label(for="email") Email*:
				input.form-control(type="email" name="email" pattern="^([a-zA-Z0-9_\-\.]+)@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([a-zA-Z0-9\-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$" required)
			#form-group
				label Contact Number*:
				input.form-control(name="contact" type='text' pattern="[789][0-9]{9}"
				required)
			#form-group
				label Username*:
				input.form-control(name="username" type='text'
				required)
			#form-group
				label(for="password") Password*:
				input.form-control(name="password" title="Please enter at least 8 characters" type="password" pattern=".{8,}" required)

			#form-group
				label(for="password2") Confirm Password*:
				input.form-control(name="password2" type="password" title="Password doesn't match" pattern=".{8,}" required oninput="validatePassword()")
			.form-group
				label Profile Image
				input#input-files.form-control-file.border(type='file' name='file' required)
			//- .row
			//- 	.col-sm-12
			//- 		.preview-images
			input.btn.btn-primary(type='submit' value='REGISTER')
			br
			br
			h6(style="background:#E7DFDD; color:black;display:inline" class="p-2") Already have an account? 
				a(href="/users/login" style="color: blue;") LOGIN

			h6(style="background:#E7DFDD; color:black;display:inline;float:right;border-radius:5px;" class="p-2") 
				a(href="/admin/login" style="color: red;") ADMIN LOGIN

