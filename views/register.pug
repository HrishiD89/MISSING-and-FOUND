extends unregistered_layout

block content
	if Photoerror
		div(class="alert alert-danger") #{Photoerror}
	h1 Register
	.f-container.p-4
		form(method='POST', action='/users/register' enctype="multipart/form-data")
			#form-group
				label Name*:
				input.form-control(name="name", type='text')
			#form-group
				label Email*:
				input.form-control(name="email", type='text')
			#form-group
				label Contact Number*:
				input.form-control(name="contact", type='text')
			#form-group
				label Username*:
				input.form-control(name="username", type='text')
			#form-group
				label Password*:
				input.form-control(name="password", type='password')
			#form-group
				label Confirm Password*:
				input.form-control(name="password2", type='password')
			.form-group
				label Profile Image
				input#input-files.form-control-file.border(type='file', name='file')
			//- .row
			//- 	.col-sm-12
			//- 		.preview-images
			input.btn.btn-primary(type='submit',value='Register')
			br
			br
			h6(style="background:#E7DFDD; color:black;display:inline" class="p-2") Already have an account? 
				a(href="/users/login", style="color: blue;") Login
