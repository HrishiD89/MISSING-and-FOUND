extends admin

block header

block content
    head
    body 
        .flex-container
            h1(style="color:red;font-weight:bold") Manage Article
            h1
                a(href="/admin/addarticle" style="color:blue;font-weight:bold" class="back") BACK
        .form-group.mt-2 
            input.form-control(type="text" id="searchInput" placeholder="Search")
        table.table.table-bordered.bg-light 
            thead
                tr
                    th(style="font-size:20px") Article
                    th(style="font-size:20px") Title
                    th(style="font-size:20px") View
                    th(style="font-size:20px") Action

            tbody
                each article in articles
                    tr

                        td
                            img(src=`/uploads/article/${article.file}`, id="Article_Image" style="align-items:center;width:50px;height:50px;border-radius:50%;object-fit:cover;border:2px solid white")
                        td #{article.title}
                        td
                            a.btn.btn-primary(style="color:white", href=`/admin/view/article/${article._id}`) View
                        td
                            a.btn.btn-danger(style="color:white", href=`/admin/delete/article/${article._id}`) Delete
