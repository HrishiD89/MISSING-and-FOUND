extends layout

block header
	//- #AMP_header.mt-5
	//- 	h1(style="display:table-cell;text-align: center").align-middle Hi #{user.name}.

block content
	h3.bg-info(style="color:white;padding-left:20px;border-radius:5px").mt-2 You have Added #{user.MissingPerson} Missing Person Records. Click to Edit!
	- var n = person.length -1;
	.f-container.p-4(style="border-radius:14px")
		ul.list-group
			while n >= 0
				-var y = person.length -n;
				a(href="/person/edit/"+person[n]._id)#person_list
					li.list-group-item.d-flex.justify-content-between.align-items-center(style="border-radius:14px")
						|#{y}.  #{person[n].Name}
						if person[n].CurrentStatus == "found"
							span.badge.badge-success.badge-pill Found
						else
							span.badge.badge-danger.badge-pill Missing
				-var n = n-1;