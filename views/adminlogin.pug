extends adminpagelayout

block content
    h1(style="max-width:720px;margin:0 auto;border-radius:12px") ADMIN LOGIN
    br
    .bg-light.p-4(style="max-width:720px;margin:0 auto;border-radius:12px")
        form(method='POST' action='/admin/home')
            #form-group
                label Username:
                input.form-control(name="username" type='text')
            #form-group
                label Password:
                input.form-control(name="password" type='password')
            br
            input.btn.btn-primary(type='submit' value='Login')
        br
        br
        h6(style="background:#E7DFDD; color:black;display:inline" class="p-2") Back to user login 
            a(href="/users/login" style="color: blue;") LOGIN PAGE 