extends layout

block header
    h1(style="text-align:center; color: white").align-middle.mt-5 INVESTIGATE


block content
    .p-4.showcase_container
        if pet.Image == null
            if pet.Gender == "male"
                img(src="/mpf/missing_male.jpg" style="width:250px;height:250px;display:block;margin-left:auto;margin-right:auto;border-radius:50%;object-fit: cover;")
            else
                img(src="/mpf/missing_female.png" style="width:250px;height:250px;display:block;margin-left:auto;margin-right:auto;border-radius:50%;object-fit: cover;")
        else
            img(src="/uploads/missing_pet/"+pet.Image style="width:250px;height:250px;display:block;margin-left:auto;margin-right:auto;border-radius:50%;object-fit: cover;")
        br
        h2.text-center= pet.Name
        br
        table.table.table-hover.table-dark
            tbody
                tr
                    td Name
                    td(colspan="2")= pet.Name
                tr
                    td Gender
                    td(colspan="2")= pet.Gender
                tr
                    td Species
                    td(colspan="2")= pet.Species
                tr
                    td Age
                    td(colspan="2")= pet.Age
                tr
                    td Size
                    td(colspan="2")= pet.Size
                tr
                    td Breed
                    td(colspan="2")= pet.Breed
                tr
                    td Color
                    td(colspan="2")= pet.Color
                tr
                    td Country
                    td(colspan="2")= pet.Country
                tr
                    td City
                    td(colspan="2")= pet.City
                tr
                    td Current Status
                    td(colspan="2")= pet.CurrentStatus
        table.table.table-hover.table-dark
            tbody
                tr
                    td Description
                    td(colspan="2")= pet.Description

        h4.bg-info(style="color:white") Do you have any information about #{pet.Name} ?
        h4.bg-info(style="color:white") Yes? It would greatly help #{user1.name} in the Search, Contact #{user1.name}.
        if user1.file == null
            img(src="/images/logo.png" style="width:250px;height:250px;display:block;margin-left:auto;margin-right:auto;border-radius:50%;object-fit: cover;")
        else
            img(src="/uploads/"+user1.file style="width:250px;height:250px;display:block;margin-left:auto;margin-right:auto;border-radius:50%;object-fit: cover;")
        br
        table.table.table-hover.table-dark
            tbody
                tr
                    td Name
                    td(colspan="2")= user1.name
        table.table.table-hover.table-primary
            tbody
                tr
                    td Phone
                    td(colspan="2")
                        a(href="tel:"+user1.contact) Click to Call Now
                tr
                    td Email
                    td(colspan="2")
                        a(href="mailto: "+user1.email  target="_blank") Click to Send Mail Now
